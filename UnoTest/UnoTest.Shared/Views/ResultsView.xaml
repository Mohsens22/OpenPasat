<Page
    x:Class="UnoTest.Shared.Views.ResultsView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:UnoTest.Shared.Views"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    xmlns:toolkit="using:Uno.UI.Toolkit"
    xmlns:chart="using:Syncfusion.UI.Xaml.Charts"
    Background="Transparent">

    <Grid>
        <ScrollViewer>
            <Grid Margin="30,30,30,0">
                <StackPanel VerticalAlignment="Top">
                    <RelativePanel Height="30">
                        <StackPanel  MinWidth="250" RelativePanel.AlignVerticalCenterWithPanel="True" RelativePanel.AlignLeftWithPanel="True">
                            <RelativePanel>
                                <TextBlock Text="Test point:" RelativePanel.AlignVerticalCenterWithPanel="True" />
                                <TextBlock RelativePanel.AlignRightWithPanel="True" Text="10/20" />
                            </RelativePanel>
                        </StackPanel>
                        <StackPanel RelativePanel.AlignVerticalCenterWithPanel="True" RelativePanel.AlignRightWithPanel="True" MinWidth="250">
                            <RelativePanel>
                                <TextBlock Text="Test point:" RelativePanel.AlignVerticalCenterWithPanel="True" />
                                <TextBlock RelativePanel.AlignRightWithPanel="True" Text="10/20" />
                            </RelativePanel>
                        </StackPanel>
                    </RelativePanel>
                    <ListView x:Name="UserPhotosListView"
          ScrollViewer.HorizontalScrollMode="Enabled"
          ScrollViewer.HorizontalScrollBarVisibility="Auto"
          ScrollViewer.IsHorizontalRailEnabled="True">
                        <ListView.ItemsPanel>
                            <ItemsPanelTemplate>
                                <VirtualizingStackPanel Orientation="Horizontal" />
                            </ItemsPanelTemplate>
                        </ListView.ItemsPanel>
                        <ListView.ItemContainerStyle>
                            <Style TargetType="ListViewItem">
                                <Setter Property="Width" Value="40" />
                                <Setter Property="Height" Value="30" />
                                <Setter Property="Padding" Value="0" />
                                <Setter Property="VerticalContentAlignment" Value="Bottom"/>
                                <Setter Property="MinWidth" Value="0"/>
                                <Setter Property="MinHeight" Value="0"/>
                            </Style>
                        </ListView.ItemContainerStyle>
                        <ListView.Items>
                            <TextBlock FontSize="25" Foreground="#FF4343" Text="" FontFamily="Segoe MDL2 Assets"/>
                            <TextBlock FontSize="25" Foreground="#00CC6A" Text="" FontFamily="Segoe MDL2 Assets"/>
                            <TextBlock FontSize="25" Foreground="#0078D7" Text="" FontFamily="Segoe MDL2 Assets"/>
                        </ListView.Items>
                    </ListView>
                    <RelativePanel Height="30">
                        <StackPanel x:Name="ReactionTime" RelativePanel.AlignVerticalCenterWithPanel="True" MinWidth="160" RelativePanel.AlignLeftWithPanel="True">
                            <RelativePanel>
                                <TextBlock Text="Reaction Time:" RelativePanel.AlignVerticalCenterWithPanel="True" />
                                <TextBlock RelativePanel.AlignRightWithPanel="True" Text="10000ms" />
                            </RelativePanel>
                        </StackPanel>
                        
                        <StackPanel RelativePanel.AlignVerticalCenterWithPanel="True" MinWidth="190" 
                                    RelativePanel.AlignHorizontalCenterWithPanel="True">
                            <RelativePanel>
                                <TextBlock Text="False Reaction Time:" RelativePanel.AlignVerticalCenterWithPanel="True" />
                                <TextBlock RelativePanel.AlignRightWithPanel="True" Text="10000ms" />
                            </RelativePanel>
                        </StackPanel>
                        <StackPanel x:Name="FalseReactionTime" RelativePanel.AlignVerticalCenterWithPanel="True" MinWidth="190" RelativePanel.AlignRightWithPanel="True">
                            <RelativePanel>
                                <TextBlock Text="True Reaction Time:" RelativePanel.AlignVerticalCenterWithPanel="True" />
                                <TextBlock RelativePanel.AlignRightWithPanel="True" Text="10000ms" />
                            </RelativePanel>
                        </StackPanel>
                    </RelativePanel>
                    
                    <!--<Grid Margin="2">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>
                        <TextBlock HorizontalAlignment="Left" Margin="2" FontSize="18"
                        FontFamily="Segoe UI"
                       Text="Spline Chart"/>
                        <Grid   BorderThickness="1" BorderBrush="LightGray" Margin="5" Grid.Row="1">
                            <chart:SfChart AreaBorderThickness="0" Margin="5,0,5,0" >
                                <chart:SfChart.Behaviors>
                                    <chart:ChartZoomPanBehavior />
                                </chart:SfChart.Behaviors>
                                <chart:SfChart.Header>
                                    <TextBlock FontSize="14" Foreground="Black"
                         FontFamily="Segoe UI"
                         Margin="0,5,0,5">Profit of X product - [1995 - 2005]</TextBlock>
                                </chart:SfChart.Header>

                                <chart:SfChart.PrimaryAxis>
                                    <chart:CategoryAxis ShowGridLines="False"
                                            Header="Year"
                                            LabelPlacement="BetweenTicks"/>
                                </chart:SfChart.PrimaryAxis>
                                <chart:SfChart.SecondaryAxis>
                                    <chart:NumericalAxis TickLineSize="0" Header="Profit ( in $ )" LabelFormat="##.##"
                                             RangePadding="Additional"   EdgeLabelsDrawingMode="Shift" 
                                             ShowGridLines="False">
                                        <chart:NumericalAxis.AxisLineStyle>
                                            <Style TargetType="Line">
                                                <Setter Property="Stroke" Value="Transparent"/>
                                            </Style>
                                        </chart:NumericalAxis.AxisLineStyle>
                                    </chart:NumericalAxis>
                                </chart:SfChart.SecondaryAxis>
                                <chart:SplineSeries  ItemsSource="{x:Bind ViewModel.SplineData}" ShowTooltip="True"
                             XBindingPath="XValue" YBindingPath="YValue"  >
                                    <chart:SplineSeries.AdornmentsInfo>
                                        <chart:ChartAdornmentInfo ShowLabel="True"  UseSeriesPalette="True"   />
                                    </chart:SplineSeries.AdornmentsInfo>
                                </chart:SplineSeries>
                            </chart:SfChart>
                        </Grid>
                    </Grid>

                    <RelativePanel Height="300">
                        <Grid MaxWidth="400" >

                            <Grid Margin="2">
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="*"/>
                                </Grid.RowDefinitions>
                                <TextBlock HorizontalAlignment="Left" VerticalAlignment="Center"
                        FontFamily="Segoe UI"
                       Margin="2" FontSize="18" Text="Pie Chart"/>
                                <Grid   BorderThickness="1" BorderBrush="LightGray" Margin="5" Grid.Row="1">
                                    <chart:SfChart AreaBorderThickness="0" Margin="5,0,5,0" >

                                        <chart:SfChart.Header>
                                            <TextBlock FontSize="14" Foreground="Black"
                         FontFamily="Segoe UI"
                         Margin="0,5,0,5">Internet Usage in World</TextBlock>
                                        </chart:SfChart.Header>
                                        <chart:SfChart.Legend>
                                            <chart:ChartLegend DockPosition="Bottom" />
                                        </chart:SfChart.Legend>
                                        <chart:PieSeries ConnectorType="Line" ExplodeOnMouseClick="True"
                             PieCoefficient="0.95" ExplodeRadius="7"
                              Palette="Custom"
                             x:Name="pieSeries"  
                             ItemsSource="{x:Bind ViewModel.Data}" 
                             XBindingPath="Country" YBindingPath="Count" >
                                            <chart:PieSeries.AdornmentsInfo>
                                                <chart:ChartAdornmentInfo   ShowLabel="True"  FontSize="12" Foreground="White"  >
                                                </chart:ChartAdornmentInfo>
                                            </chart:PieSeries.AdornmentsInfo>
                                            <chart:PieSeries.ColorModel>
                                                <chart:ChartColorModel>
                                                    <chart:ChartColorModel.CustomBrushes>
                                                        <SolidColorBrush Color="#47ba9f"/>
                                                        <SolidColorBrush Color="#e58870"/>
                                                        <SolidColorBrush Color="#9686c9"/>
                                                        <SolidColorBrush Color="#e56590"/>
                                                    </chart:ChartColorModel.CustomBrushes>
                                                </chart:ChartColorModel>
                                            </chart:PieSeries.ColorModel>
                                        </chart:PieSeries>
                                    </chart:SfChart>
                                </Grid>
                            </Grid>
                        </Grid>
                        <Grid MaxWidth="405" RelativePanel.AlignRightWithPanel="True">
                            <Grid Margin="2">
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="*"/>
                                </Grid.RowDefinitions>
                                <TextBlock HorizontalAlignment="Left" VerticalAlignment="Center"
                        FontFamily="Segoe UI"
                       Margin="2" FontSize="18" Text="Bar Chart"/>
                                <Grid   BorderThickness="1" BorderBrush="LightGray" Margin="5" Grid.Row="1">
                                    <chart:SfChart AreaBorderThickness="0" Margin="5,0,5,5" >

                                        <chart:SfChart.Header>
                                            <TextBlock FontSize="14" Foreground="Black"
                         FontFamily="Segoe UI"
                         Margin="0,5,0,5">Olympic Medal Counts - RIO</TextBlock>
                                        </chart:SfChart.Header>

                                        <chart:SfChart.PrimaryAxis>
                                            <chart:CategoryAxis ShowGridLines="False" Visibility="Collapsed"
                                            LabelRotationAngle="270" TickLineSize="0"
                                            LabelPlacement="BetweenTicks">
                                                <chart:CategoryAxis.AxisLineStyle>
                                                    <Style TargetType="Line">
                                                        <Setter Property="Stroke" Value="Transparent"/>
                                                    </Style>
                                                </chart:CategoryAxis.AxisLineStyle>
                                            </chart:CategoryAxis>
                                        </chart:SfChart.PrimaryAxis>
                                        <chart:SfChart.SecondaryAxis>
                                            <chart:NumericalAxis Visibility="Collapsed"                                    
                                     ShowGridLines="False"/>
                                        </chart:SfChart.SecondaryAxis>
                                        <chart:BarSeries  
                             ItemsSource="{x:Bind ViewModel.Data}" ShowTooltip="True"
                             XBindingPath="Country" YBindingPath="Count" Palette="Custom" >
                                            <chart:BarSeries.AdornmentsInfo>
                                                <chart:ChartAdornmentInfo ShowLabel="True"
                                                      FontSize="16"
                                                      LabelPosition="Inner" Foreground="Black"/>
                                            </chart:BarSeries.AdornmentsInfo>
                                            <chart:BarSeries.ColorModel>
                                                <chart:ChartColorModel>
                                                    <chart:ChartColorModel.CustomBrushes>
                                                        <SolidColorBrush Color="#47ba9f"/>
                                                        <SolidColorBrush Color="#e58870"/>
                                                        <SolidColorBrush Color="#9686c9"/>
                                                        <SolidColorBrush Color="#e56590"/>
                                                        <SolidColorBrush Color="#f8b883"/>
                                                    </chart:ChartColorModel.CustomBrushes>
                                                </chart:ChartColorModel>
                                            </chart:BarSeries.ColorModel>
                                        </chart:BarSeries>
                                        <chart:SfChart.Behaviors>
                                            <chart:ChartSelectionBehavior EnableSegmentSelection="True" />
                                            <chart:ChartZoomPanBehavior />
                                        </chart:SfChart.Behaviors>
                                    </chart:SfChart>
                                </Grid>
                            </Grid>
                        </Grid>
                    </RelativePanel>
                    <Grid Margin="2">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>
                        <TextBlock HorizontalAlignment="Left" Margin="2" FontSize="18"
                        FontFamily="Segoe UI"
                       Text="Spline Chart"/>
                        <Grid   BorderThickness="1" BorderBrush="LightGray" Margin="5" Grid.Row="1">
                            <chart:SfChart AreaBorderThickness="0" Margin="5,0,5,0" >
                                <chart:SfChart.Behaviors>
                                    <chart:ChartZoomPanBehavior />
                                </chart:SfChart.Behaviors>
                                <chart:SfChart.Header>
                                    <TextBlock FontSize="14" Foreground="Black"
                         FontFamily="Segoe UI"
                         Margin="0,5,0,5">Profit of X product - [1995 - 2005]</TextBlock>
                                </chart:SfChart.Header>

                                <chart:SfChart.PrimaryAxis>
                                    <chart:CategoryAxis ShowGridLines="False"
                                            Header="Year"
                                            LabelPlacement="BetweenTicks"/>
                                </chart:SfChart.PrimaryAxis>
                                <chart:SfChart.SecondaryAxis>
                                    <chart:NumericalAxis TickLineSize="0" Header="Profit ( in $ )" LabelFormat="##.##"
                                             RangePadding="Additional"   EdgeLabelsDrawingMode="Shift" 
                                             ShowGridLines="False">
                                        <chart:NumericalAxis.AxisLineStyle>
                                            <Style TargetType="Line">
                                                <Setter Property="Stroke" Value="Transparent"/>
                                            </Style>
                                        </chart:NumericalAxis.AxisLineStyle>
                                    </chart:NumericalAxis>
                                </chart:SfChart.SecondaryAxis>
                                <chart:SplineSeries  ItemsSource="{x:Bind ViewModel.SplineData}" ShowTooltip="True"
                             XBindingPath="XValue" YBindingPath="YValue"  >
                                    <chart:SplineSeries.AdornmentsInfo>
                                        <chart:ChartAdornmentInfo   />
                                    </chart:SplineSeries.AdornmentsInfo>
                                </chart:SplineSeries>
                            </chart:SfChart>
                        </Grid>
                    </Grid>
                    <RelativePanel Height="30">
                        <StackPanel  MinWidth="250" RelativePanel.AlignVerticalCenterWithPanel="True" RelativePanel.AlignLeftWithPanel="True">
                            <RelativePanel>
                                <TextBlock Text="Test Started At:" RelativePanel.AlignVerticalCenterWithPanel="True" />
                                <TextBlock RelativePanel.AlignRightWithPanel="True" Text="Some Date" />
                            </RelativePanel>
                        </StackPanel>
                        <StackPanel RelativePanel.AlignVerticalCenterWithPanel="True" RelativePanel.AlignRightWithPanel="True" MinWidth="250">
                            <RelativePanel>
                                <TextBlock Text="Test Ended At:" RelativePanel.AlignVerticalCenterWithPanel="True" />
                                <TextBlock RelativePanel.AlignRightWithPanel="True" Text="Some Date" />
                            </RelativePanel>
                        </StackPanel>
                    </RelativePanel>-->
                </StackPanel>

            </Grid>
        </ScrollViewer>
        
    </Grid>
</Page>

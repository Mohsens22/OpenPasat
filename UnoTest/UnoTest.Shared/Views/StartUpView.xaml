<Page
    x:Class="UnoTest.Shared.Views.StartUpView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:UnoTest.Shared.Views"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" xmlns:Converters="using:UnoTest.Shared.Converters"
    mc:Ignorable="d"
    Background="Transparent">
    <Page.Resources>
        <Converters:RepresentationTypeConverter x:Key="RepresentationTypeConverter" />
        <Converters:RepresentationTypeLoader x:Key="RepresentationTypeLoader" />
    </Page.Resources>
    <Grid>
        
        <StackPanel MinWidth="300" MaxWidth="400" x:Name="informatives" HorizontalAlignment="Stretch" VerticalAlignment="Center">
            <RelativePanel>
                <TextBox RelativePanel.AlignRightWithPanel="True" x:Name="countTest"  Text="{x:Bind ViewModel.Identifier.TestCount,Mode=TwoWay}" />
                <TextBlock Text="Test count:" RelativePanel.AlignVerticalCenterWithPanel="True" />
            </RelativePanel>

            <RelativePanel Margin="0,10,0,0">
                <TextBox RelativePanel.AlignRightWithPanel="True" x:Name="millisec"  Text="{x:Bind ViewModel.Identifier.Quantum,Mode=TwoWay}" />
                <TextBlock Text="Quantum (ms):" RelativePanel.AlignVerticalCenterWithPanel="True" />
            </RelativePanel>

            <RelativePanel Margin="0,10,0,0">
                <TextBox RelativePanel.AlignRightWithPanel="True"  x:Name="compulse"  Text="{x:Bind ViewModel.Identifier.ImpulseRate,Mode=TwoWay}" />
                <TextBlock Text="Show options after (ms):" RelativePanel.AlignVerticalCenterWithPanel="True" />
            </RelativePanel>
            <RelativePanel Margin="0,10,0,0">
                <ComboBox RelativePanel.AlignRightWithPanel="True"  x:Name="type"
                  ItemsSource="{x:Bind ViewModel.Identifier.RepresentationType,Mode=OneWay,Converter={StaticResource RepresentationTypeLoader}}" 
                          SelectedItem="{x:Bind ViewModel.Identifier.RepresentationType,Mode=TwoWay,Converter={StaticResource RepresentationTypeConverter}}"
                          DisplayMemberPath="Display" SelectedIndex="0" SelectedValuePath="Item"
                          />
                <TextBlock Text="Test Type:" RelativePanel.AlignVerticalCenterWithPanel="True" />
            </RelativePanel>
            <RelativePanel Margin="0,10,0,0">
                <ToggleSwitch Name="Toggle" OffContent="" OnContent="" Width="50" 
                              IsOn="{x:Bind ViewModel.Identifier.Correction,Mode=TwoWay}"
                              RelativePanel.AlignRightWithPanel="True"   />
                <TextBlock Text="Correction:" RelativePanel.AlignVerticalCenterWithPanel="True" />
            </RelativePanel>

            

            <Button Command="{x:Bind ViewModel.NavigateCommand}" HorizontalAlignment="Center" Width="150" Height="50" Margin="0,30,0,0" x:Name="myButton" Style="{StaticResource ButtonRevealStyle}">Start</Button>
        </StackPanel>
    </Grid>
</Page>

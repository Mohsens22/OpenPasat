<v:StartUpViewBase
    x:Class="UnoTest.Shared.Views.StartUpView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:UnoTest.Shared.Views"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="Transparent"
    xmlns:rxuno="using:ReactiveUI.Uno"
    xmlns:v="using:UnoTest.Shared.Views"
    xmlns:vm="using:UnoTest.Shared.ViewModels">


    <StackPanel MinWidth="300" MaxWidth="400" x:Name="informatives" HorizontalAlignment="Stretch" VerticalAlignment="Center">
        <Grid>
            <TextBox VerticalAlignment="Center" x:Name="countTest" HorizontalAlignment="Right"
                         Text="{x:Bind ViewModel.Identifier.TestCount,Mode=TwoWay}" />
            <TextBlock Text="Test count:" VerticalAlignment="Center" HorizontalAlignment="Left"/>
        </Grid>

        <Grid Margin="0,10,0,0">
            <TextBox VerticalAlignment="Center" x:Name="millisec"  HorizontalAlignment="Right"
                         Text="{x:Bind ViewModel.Identifier.Quantum,Mode=TwoWay}" />
            <TextBlock HorizontalAlignment="Left" Text="Quantum (ms):" VerticalAlignment="Center" />
        </Grid>

        <Grid Margin="0,10,0,0">
            <TextBox VerticalAlignment="Center"  x:Name="compulse"  HorizontalAlignment="Right"
                         Text="{x:Bind ViewModel.Identifier.ImpulseRate,Mode=TwoWay}" />
            <TextBlock HorizontalAlignment="Left" Text="Show options after (ms):" VerticalAlignment="Center" />
        </Grid>
        <Grid Margin="0,10,0,0">
            <ComboBox VerticalAlignment="Center"  x:Name="type" HorizontalAlignment="Right"
                  ItemsSource="{x:Bind ViewModel.Representations,Mode=OneWay}" 
                          SelectedItem="{x:Bind ViewModel.SelectedRepresentation,Mode=TwoWay}"
                          DisplayMemberPath="Display" SelectedValuePath="Item"
                          />
            <TextBlock HorizontalAlignment="Left" Text="Test Type:" VerticalAlignment="Center" />
        </Grid>
        <Grid Margin="0,10,0,0">
            <ToggleSwitch Name="Toggle" OffContent="" OnContent="" Margin="0,0,-110,0" HorizontalAlignment="Right"
                              IsOn="{x:Bind ViewModel.Identifier.Correction,Mode=TwoWay}"
                              VerticalAlignment="Center"   />
            <TextBlock HorizontalAlignment="Left" Text="Correction:" VerticalAlignment="Center" />
        </Grid>



        <Button Command="{x:Bind ViewModel.NavigateCommand}" HorizontalAlignment="Center" Width="150" Height="50" Margin="0,30,0,0" x:Name="myButton" Style="{StaticResource ButtonRevealStyle}">Start</Button>

        <Button Command="{x:Bind ViewModel.TestCommand}" HorizontalAlignment="Center" Width="150" Height="50" Margin="0,30,0,0" Style="{StaticResource ButtonRevealStyle}">LoadTestAnswer</Button>
    </StackPanel>

</v:StartUpViewBase>
